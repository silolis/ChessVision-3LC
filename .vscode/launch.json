    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train Piece Classifier",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/chessvision/piece_classification/train_classifier.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--compute-embeddings",
                "--description", "",
                "--run-tests",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/training",
            }
        },
        {
            "name": "Train Segmentation Model",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/chessvision/board_extraction/train_unet.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--epochs",
                "20",
                "--learning-rate",
                "0.0000001",
                "--classes",
                "1",
                "--scale",
                "1",
                "--batch-size",
                "2",
                "--amp",
                "--run-tests"
            ]
        },
        {
            "name": "Run test suite",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/chessvision/test/test.py",
            "console": "integratedTerminal",
            "justMyCode": false

        }
    ]
}